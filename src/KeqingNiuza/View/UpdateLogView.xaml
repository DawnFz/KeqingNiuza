<UserControl x:Class="KeqingNiuza.View.UpdateLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KeqingNiuza.View"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="{StaticResource ContentViewBackground}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Margin="0,10,0,10"
                       FontSize="16"
                       Text="v2已发布，v1及v0即将停止支持" />
            <TextBlock Margin="0,5,0,5"
                       FontSize="12"
                       Text="v2需重新下载，v0.2和v1可平滑过渡到v2" />
            <TextBlock Margin="0,5,0,5"
                       FontSize="12"
                       Text="v0和v1将会在原神2.1版本结束时停止支持" />
            <TextBlock Margin="0,5,0,5" FontSize="12">
                v2下载及更多信息请<Hyperlink Click="Hyperlink_Click" NavigateUri="https://bbs.nga.cn/read.php?tid=28546319&amp;_ff=650">查看此网页</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
