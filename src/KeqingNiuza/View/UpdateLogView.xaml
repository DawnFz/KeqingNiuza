<UserControl x:Class="KeqingNiuza.View.UpdateLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KeqingNiuza.View"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="{StaticResource ContentViewBackground}"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Margin="0,10,0,10" FontSize="20" Text="v0.1.1更新内容" />
            <TextBlock Margin="0,5,0,5" FontSize="16" Text="新功能" />
            <TextBlock Margin="0,5,0,5" Text="● 原始数据视图" />
            <TextBlock Margin="0,5,0,5" Text="● 导入祈愿数据，支持Excel文件" />
            <TextBlock Margin="0,5,0,5" FontSize="16" Text="Bug修复" />
            <TextBlock Margin="0,5,0,5" Text="● 修复了保存祈愿记录中24小时制变为12小时制的问题" />
            <TextBlock Margin="0,5,0,5" Foreground="Red" Text="   由于上述问题会造成数据不可逆的改变，请删除UserData文件夹下的所有文件后，重新加载数据" />
        </StackPanel>
    </Grid>
</UserControl>
