<UserControl x:Class="KeqingNiuza.View.UpdateLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KeqingNiuza.View"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="{StaticResource ContentViewBackground}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Margin="0,10,0,10" FontSize="20" Text="v0.2.1.21061012更新内容" />
            <TextBlock Margin="0,5,0,5" FontSize="16" Text="修复了非UTC+8时区可能出现的各种问题，修复后软件内的时间都基于系统时区的设置" />
            <TextBlock Margin="0,5,0,5" FontSize="16" Text="修复了5星历史记录的时间显示错误" />
            <TextBlock Margin="0,5,0,5" FontSize="16" Text="修复了Excel导入时的数据错误" />
            <TextBlock Margin="0,5,0,5" FontSize="16" Foreground="Red" Text="需要清空UserData文件夹，重新导入6个月前的数据" />
        </StackPanel>
    </Grid>
</UserControl>
